@page
<div class="container">
   
    <div class="row">&nbsp;</div>
    <div class="row">
        <form>
        <div class="col-2">User</div>
            <div class="col-4"><input type="text" id="userInput" is required /></div>
        </form>
    </div>
    <div class="row">
        <form>
        <div class="col-2">Message</div>
            <div class="col-4"><input type="text" id="messageInput" required /></div>
        </form>
    </div>
    <div class="row">&nbsp;</div>
    <div class="row">
        <form>
        <div class="col-6">
            <input type="button" id="sendButton" value="Send Message" required/>
        </div>
        </form>
    </div>
</div>
<div class="row">
    <div class="col-12">
        <hr />
    </div>
</div>
<div class="row">
    <div class="col-6">
        <ul id="messagesList"></ul>
    </div>
</div>
<script src="~/js/signalr/dist/browser/signalr.js"></script>
<script src="~/js/chat.js"></script>